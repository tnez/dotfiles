set drawbox true
set previewer ctpv
set cleaner ctpvclear
&ctpv -s $id
&ctpvquit $id


# Mappings to create files / directories
map a push %touch<space>
map A push %mkdir<space>


cmd trash ${{
  if command -v trash >/dev/null; then
      trash "$fx"
  else
      mkdir -p ~/.trash
      mv -- "$fx" ~/.trash
  fi
}}
map d trash %f
